doctype html
html
  head
    title= "Register | Your Organizer"
    link(rel="stylesheet" type="text/css" href="/css/base.css")
    link(rel="stylesheet" type="text/css" href="/css/forms.css")
  body
    form(action="/auth/register" method="POST")
      h1= "Registration"
      p.ilabel= "Username:"
      input(required="true" type="text" name="username" placeholder="Username")
      p.ilabel= "Email Address:"
      input(required="true" type="email" name="email" placeholder="Email")
      p.ilabel= "Password"
      input(required="true" type="password" name="password" placeholder="Password")
      p.ilabel= "Confirm Password"
      input(required="true" type="password" name="cpasswd" placeholder="Re-enter Password")
      input(type="submit" value="Register!")
